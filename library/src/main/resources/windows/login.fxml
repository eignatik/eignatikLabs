<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.LoginController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane maxHeight="300.0" maxWidth="500.0" minHeight="300.0" minWidth="500.0" prefHeight="300.0" prefWidth="500.0" GridPane.rowIndex="1">
            <children>
                <TextField fx:id="usernameInput" layoutX="48.0" layoutY="123.0" />
                <PasswordField fx:id="passwordInput" layoutX="48.0" layoutY="194.0" />
                <Label layoutX="48.0" layoutY="91.0" text="Username" />
                <Label layoutX="48.0" layoutY="166.0" text="Password" />
                <Button fx:id="loginButton" layoutX="66.0" layoutY="245.0" mnemonicParsing="false" onAction="#runAuthentication" text="Log In" />
